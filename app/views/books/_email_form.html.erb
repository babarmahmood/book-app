<%= form_with(url: send_test_email_books_path, method: :post, id: "email-form", style: "display: none;") do |form| %>
    <div class="govuk-form-group">
      <%= form.label :email, class: "govuk-label" %>
      <%= form.text_field :email, class: "govuk-input" %>
    </div>
    <%= form.submit "Send Test Email", class: "govuk-button govuk-button--secondary" %>
  
    <!-- Add a cancel button -->
    <%= button_tag "Cancel", type: "button", id: "cancel-email-form", class: "govuk-button govuk-button--warning" %>
  <% end %>